<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="296dp"
    android:layout_height="232dp"
    android:layout_gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/dialog_layout"
    android:elevation="10dp"
    >
    <TextView
        android:id="@+id/d_forgotPassword_didYouForgot"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="17dp"
        android:layout_width="122dp"
        android:layout_height="46dp"
        android:textColor="@color/black"
        android:text="Did you forget your password?"
        android:textSize="15dp"
        android:gravity="center"
        android:fontFamily="@font/poppins_medium"
        ></TextView>
    <TextView
        android:id="@+id/d_forgotPassword_weCanHelp"
        app:layout_constraintTop_toBottomOf="@id/d_forgotPassword_didYouForgot"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="5dp"
        android:layout_width="196dp"
        android:layout_height="30dp"
        android:textColor="@color/black"
        android:text="We can help you log into your account if youâ€™ve forgotten your password."
        android:textSize="10dp"
        android:gravity="center"
        android:fontFamily="@font/poppins_regular"
        ></TextView>
    <TextView
        android:id="@+id/d_forgotPassword_lineUp"
        app:layout_constraintTop_toBottomOf="@id/d_forgotPassword_weCanHelp"
        android:layout_width="match_parent"
        android:layout_marginTop="9dp"
        android:layout_height="1dp"
        android:background="#dedede"></TextView>

    <TextView
        android:id="@+id/d_forgotPassword_forgotPassword"
        app:layout_constraintTop_toBottomOf="@id/d_forgotPassword_lineUp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="9dp"
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:textColor="@color/usual_color"
        android:text="Forgot password?"
        android:textSize="15dp"
        android:gravity="center"
        android:fontFamily="@font/poppins_medium"
        ></TextView>

    <TextView
        android:id="@+id/d_forgotPassword_lineDown"
        app:layout_constraintTop_toBottomOf="@id/d_forgotPassword_forgotPassword"
        android:layout_width="match_parent"
        android:layout_marginTop="9dp"
        android:layout_height="1dp"
        android:background="#dedede"></TextView>
    <TextView
        android:id="@+id/d_forgotPassword_tryAgain"
        app:layout_constraintTop_toBottomOf="@id/d_forgotPassword_lineDown"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="9dp"
        android:layout_width="122dp"
        android:layout_height="46dp"
        android:textColor="@color/usual_color"
        android:text="Try again"
        android:textSize="15dp"
        android:gravity="center"
        android:fontFamily="@font/poppins_regular"
        ></TextView>
</androidx.constraintlayout.widget.ConstraintLayout>