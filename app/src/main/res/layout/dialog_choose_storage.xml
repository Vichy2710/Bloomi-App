<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="102dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:background="@drawable/input_border">
    <LinearLayout
        android:id="@+id/d_chooseStorage_upload"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:orientation="horizontal"
        android:paddingLeft="60dp">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/icon_upload"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/d_chooseStorage_uploadText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center"
            android:text="Upload"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_marginLeft="10dp"
            />
    </LinearLayout>
    <TextView
        app:layout_constraintTop_toTopOf="@id/d_chooseStorage_addAlbum"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E3E3E3"></TextView>
    <LinearLayout

        android:id="@+id/d_chooseStorage_addAlbum"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:orientation="horizontal"
        android:paddingLeft="60dp">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/icon_album"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/d_chooseStorage_addAlbumText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center"
            android:text="Add album"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_marginLeft="10dp"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>